<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Connessione al database MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/eforhum</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">4nt4n1</property>
        
        <!-- Configurazione del dialetto SQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <!-- Mostra le query SQL generate -->
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">true</property>
        
        <!-- Gestione automatica dello schema -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Pool di connessioni (opzionale) -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>
        
        <!-- Mappatura delle classi di entitÃ  -->
        <mapping class="it.eforhum.User"/>
        <mapping class="it.eforhum.PhoneNumber"/>
    </session-factory>
</hibernate-configuration>